<?xml version="1.0" encoding="utf-8"?>
<com.example.acer.simplehabit.viewspods.MeViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/rl_progress"
        android:id="@+id/cv_get_unlimited_access"
        android:layout_marginBottom="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_all_topic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@color/accent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#60000000">

                <RelativeLayout
                    android:id="@+id/rl_icon_for_topic"
                    android:layout_width="80dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/iv_icon_for_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/rl_icon_for_topic">

                    <TextView
                        android:id="@+id/tv_header_for_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Unlimited Access"
                        android:textColor="@color/divider"
                        android:textSize="18sp"
                         />

                    <TextView
                        android:id="@+id/tv_brief_for_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_header_for_topic"
                        android:text="To the world's best teachers"
                        android:textColor="@color/divider"
                        android:textSize="16sp" />


                </RelativeLayout>


                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:id="@+id/rl_right_arrow"
                        android:layout_width="80dp"
                        android:layout_height="100dp">

                        <ImageView
                            android:id="@+id/iv_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_chevron_right_white_32dp" />

                    </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/rl_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:id="@+id/tv_my_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Progress"
                android:textColor="@color/divider"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"/>

            <LinearLayout
                android:id="@+id/id_progress_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_my_progress"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_day_for_current_day_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="19"
                        android:textColor="@color/color_purple"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_day_for_current_day_streak"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_purple"
                        android:text="Current" />

                    <TextView
                        android:id="@+id/tv_day_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_current"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_purple"
                        android:text="Day Streak" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_day_for_total_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="255"
                        android:textColor="@color/accent"
                        android:textSize="24sp" />


                    <TextView
                        android:id="@+id/tv_total_for_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_day_for_total_minute"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/accent"
                        android:text="Total" />

                    <TextView
                        android:id="@+id/tv_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_for_minute"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/accent"
                        android:text="Minute" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_day_for_total_sessions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="38"
                        android:textColor="@color/primary_light"
                        android:textSize="24sp" />


                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_day_for_total_sessions"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/primary_light"
                        android:text="Total" />

                    <TextView
                        android:id="@+id/tv_session"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/primary_light"
                        android:text="Session" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>




</com.example.acer.simplehabit.viewspods.MeViewPod>