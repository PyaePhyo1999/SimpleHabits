    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="128dp"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_all_topic"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_all_topics" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="#60000000">

                <RelativeLayout
                    android:id="@+id/rl_icon_for_topic"
                    android:layout_width="100dp"
                    android:layout_height="128dp">

                    <ImageView
                        android:id="@+id/iv_icon_for_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/rl_icon_for_topic">

                    <TextView
                        android:id="@+id/tv_header_for_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basics"
                        android:textColor="@color/divider"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_brief_for_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_header_for_topic"
                        android:text="Inspire joy, abundance, and purpose"
                        android:textColor="@color/divider"
                        android:textSize="16sp" />


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>